@using PetShopFinal.DAL.Models;
@model Offer;

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Product</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Image">UserTitle</label>
                    <input asp-for="Image" class="form-control" id="exampleInputUsername1" placeholder="UserTitle" accept="image/*">
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Pruduct Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputUsertitle1" placeholder="Product Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" type="text" class="form-control" id="exampleInputUsername1" placeholder="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-controller="Index" class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>