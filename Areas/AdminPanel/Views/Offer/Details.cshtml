@using PetShopFinal.DAL.Models;
﻿
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@model Offer

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body text-center">
            <h4 class="card-title">Partner</h4>
            <p><img class="object-fit-cover" src="~/assets/@Model.ImageUrl" style="width:300px; height:300px" /></p>
            <p class="card-description text-success text-uppercase font-weight-bold">
                @Model.Title
            </p>
            <p class="text-uppercase font-weight-bold">
                @Html.Raw(Model.Description)
            </p>
            <p></p>
            <p></p>
        </div>
    </div>
</div>