@using PetShopFinal.ViewModels;
@{
    ViewData["Title"] = "Contact Us";
    ContactViewModel contactViewModel = Model;
    var touchs = contactViewModel.Touch;
    var contacts = contactViewModel.Contact;
}

<main>
    <section class="bg_bone">
        <section class="search d-none">
            <div class="content_search">
                <div class="search_cont">
                    <input placeholder="Search..." type="search" name="" id="" />
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
            </div>
        </section>
        <div class="all_bg_bone">
            <div class="content_testimonials text-center">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </section>

    <section class="pages_full">
        <a href="/Home/Index">HOME</a>
        <i class="fa-solid fa-arrow-right"></i>
        <a href="">ELEMENTS</a>
        <i class="fa-solid fa-arrow-right"></i>
        <a class="main_page" href="/Contact/Index">CONTACT US</a>
    </section>

    <div class="touch_contact">
        <div class="container">
            <div class="content_touch">
                @foreach (var item in touchs)
                {
                    <div class="head_touch d-flex">
                        <h3>@item.Title</h3>
                        <p class="lg_touch_ph">
                            @Html.Raw(item.Description)
                        </p>
                        <p class="sm_touch_ph">
                            We are available 24/7 by fax, e-mail or by phone. You can also
                            use our quick contact form to ask a question about our
                            solutions.
                        </p>
                    </div>
                    <div class="bottom_touch">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="box_mail_touch">
                                    <div class="touchinput">
                                        <input placeholder="@item.FName" type="text" />
                                    </div>
                                    <div class="touchinput">
                                        <input placeholder="@item.Email" type="email" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="box_mail_touch">
                                    <div class="touchinput">
                                        <input placeholder="@item.LName" type="text" />
                                    </div>
                                    <div class="touchinput">
                                        <input placeholder="@item.Phone" type="tel" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="box_mail_touch">
                                    <div class="touchinput">
                                        <textarea placeholder="@item.Message"
                                                  name=""
                                                  id=""
                                                  cols="30"
                                                  rows="6"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="#">@item.Link</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <section class="contact_info">
        <div class="container">
            <div class="content_c_info">
                <div class="row">
                    @foreach (var item in contacts)
                    {
                        <div class="col-lg-4">
                            <div class="box_cont_info text-center">
                                <h4>@item.PhoneTitle</h4>
                                <ul style="list-style: none">
                                    <li>
                                        Office <a href="tel:@item.Phone">@item.Phone</a>
                                    </li>
                                    <li>
                                        Fax <a href="tel:@item.Phone">@item.Phone</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="box_cont_info text-center">
                                <h4>@item.AdressTitle</h4>
                                <p>
                                    @Html.Raw(item.Address)
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="box_cont_info text-center">
                                <h4>@item.EmailTitle</h4>
                                <ul style="list-style: none">
                                    <li class="mail_c_info">@item.Email</li>
                                    <li class="mail_c_info">@item.Email</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</main>