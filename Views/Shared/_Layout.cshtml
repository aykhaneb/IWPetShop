<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/assets/css/bootstrap.css" />
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <title>@ViewBag.Title</title>
    <link rel="icon"
          href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSpeIYUpJFDVymrHTVayWW9LpZqOqq1um6GIg&usqp=CAU"
          type="image/x-icon" />
    <style>
        .pages_category_position,
        .elements_category_position, .users_category_position {
            position: relative !important;
        }

        .users_category {
            width: 180px;
            position: absolute;
            z-index: 1;
            top: 30px;
            left: 0px;
            right: 10px;
        }

        .content_pages {
            padding: 20px 18px;
            background-color: #fff;
        }

        ul {
            list-style: none;
        }

        li {
            margin-bottom: 15px;
        }

        a {
            display: inline-block;
            font-size: 16px;
            line-height: 1.2;
            font-weight: 700;
            letter-spacing: .1em;
            text-decoration: none;
            color: #151515;
            transition: .4s;
        }

            a:hover {
                color: #ffd34b;
            }


        html,
        body {
            position: relative;
            height: 100%;
        }

        body {
            font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
            font-size: 14px;
            color: #000;
            margin: 0;
            padding: 0;
        }

        swiper-container {
            width: 100%;
            height: 100%;
        }

        swiper-slide {
            text-align: center;
            font-size: 18px;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            swiper-slide img {
                display: block;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
    </style>
</head>
<body>


    @await Component.InvokeAsync("Header")

    @await Component.InvokeAsync("HeaderBottom")

    @await Component.InvokeAsync("HeaderSM")

    @RenderBody()

    @await Component.InvokeAsync("FooterTop")

    @await Component.InvokeAsync("Footer")

</body>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-element-bundle.min.js"></script>
<script src="~/assets/js/home.js" asp-append-version="true"></script>
<script src="~/assets/js/main.js" asp-append-version="true"></script>
<script src="~/assets/js/basket.js" asp-append-version="true"></script>
<script src="~/assets/js/shop.js" asp-append-version="true"></script>

