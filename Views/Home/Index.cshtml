    <section class="team">
        <div class="container">
            <div class="content_team">
                <div class="head_team text-center">
                    <h2>Our Team</h2>
                </div>
                <div class="bottom_team text-center">
                    <div class="row">
                        @foreach (var teamlg in teamlgs)
                        {
                            <div class="col-lg-4">
                                <div class="box_team">
                                    <div class="img_team">
                                        <img src="~/assets/@teamlg.ImageUrl" alt="" />
                                    </div>
                                    <div class="text_team">
                                        <a href="">@teamlg.Name</a>
                                        <p>
                                            @teamlg.Description
                                        </p>
                                        <div class="icons_team">
                                            <i class="fa-brands fa-facebook-f"></i>
                                            <i class="fa-brands fa-twitter"></i>
                                            <i class="fa-brands fa-instagram"></i>
                                            <i class="fa-brands fa-google-plus-g"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="treats">
        <div class="container">
            <div class="content_treats">
                <div class="text_treats text-center">
                    @foreach (var treat in treats)
                    {
                        <h2>@treat.Title</h2>
                        <h4>
                            @treat.Description
                        </h4>
                        <a href="">@treat.Link</a>
                    }
                </div>
            </div>
        </div>
    </section>

    <section class="news">
        <div class="container">
            <div class="content_news">
                <div class="head_news text-center">
                    <h2>Latest News</h2>
                </div>
                <div class="imgs_news">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="box_news">
                                <img src="~/assets/photos/post-1-570x461.jpg" alt="" />
                            </div>
                        </div>
                        <div class="col-lg-6 boxes_news flex-column d-flex justify-content-between">
                            @foreach (var item in news)
                            {
                                <div class="box_news_bottom d-flex">
                                    <img src="~/assets/@item.ImageUrl" alt="" />
                                    <div class="text_news">
                                        <p>@item.Year</p>
                                        <a href="">@item.Description</a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="organic">
        <div class="container">
            <div class="content_organic">
                <div class="row">
                    @foreach (var item in organicLG)
                    {
                        <div class="col-lg-2-5">
                            <div class="box_organic">
                                <img src="~/assets/@item.ImageUrl" alt="" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
